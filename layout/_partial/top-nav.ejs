<nav class='top-nav' data-js-no-preview role='navigation'>
  <div class='container'>
      <div class='left'>
        <a class='home back-button' href='<%= config.root %>'></a>
      </div>

      <div class='actions'>
          <ul class='page-actions flex-row'>
              <% if (theme.yuque && page.slug){ %>
                  <li class='link yuque -button hint--bottom' data-hint='<%= theme.yuqueToolTip %>'>
                      <a href='<%= [theme.yuque,page.slug,'edit'].join('/') %>'>
                          <span class='text -visible'><%= theme.yuqueToolTip %></span>
                      </a>
                  </li>
              <% } %>
             <% if (!page.slug || !theme.yuque){ %>
                <li class='link yuque -button hint--bottom' data-hint='<%= theme.githubToolTip %>'>
                  <a href='<%= theme.github %>'>
                    <span class='text -visible'><%= theme.githubToolTip %></span>
                  </a>
                </li>
             <% } %>
          </ul>
      </div>
  </div>
</nav>
